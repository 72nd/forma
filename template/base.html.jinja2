<!doctype html>
<html lang="de">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>forma</title>

    <link rel="apple-touch-icon" sizes="180x180" href="{{ url_for('static', path='/img/apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ url_for('static', path='/img/favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ url_for('static', path='/img/favicon-16x16.png') }}">
    <link rel="manifest" href="{{ url_for('static', path='/img/site.webmanifest') }}">
    <link rel="mask-icon" href="{{ url_for('static', path='/img/safari-pinned-tab.svg') }}" color="#48C78E">
    <meta name="msapplication-TileColor" content="#48C78E">
    <meta name="theme-color" content="#48C78E">

    <link href="{{ url_for('static', path='/css/bulma.min.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', path='/css/fontawesome.min.css') }}" rel="stylesheet">

    {% block head %}
    {% endblock %}
</head>

<body {%- block body_args -%}{%- endblock -%}>
    <nav class="navbar is-success" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="/">
                <img src="{{ url_for('static', path='/img/logo-text.svg') }}" width="115" height="28">
            </a>

            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbar">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>
        <div id="navbar" class="navbar-menu">
            <div class="navbar-end">
                {% block navbar_content %}
                {% endblock %}
            </div>
        </div>
    </nav>
    <main>
        <div class="container mt-6">
            <div class="columns is-mobile">
                <div class="column"></div>
                <div class="column is-10-tablet is-11-mobile">
                    {% block content %}
                    {% endblock %}
                </div>
                <div class="column"></div>
            </div>
        </div>
    </main>
</body>
{% block script_footer %}
{% endblock %}